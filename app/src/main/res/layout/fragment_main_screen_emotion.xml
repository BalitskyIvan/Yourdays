<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ui.fragments.emotion_fragment.MainScreenEmotionFragment">

    <TextView
        android:id="@+id/tite_date"
        style="@style/Text40sp.Thin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textAlignment="center"
        android:autoSizeTextType="uniform"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tite"
        style="@style/Text40sp.Thin"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:autoSizeTextType="uniform"
        android:textAlignment="center"
        android:text="How are you?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/emotionContainer"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="120dp"
        android:minHeight="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/click_to_fill_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text12sp.Thin"
        app:layout_constraintBottom_toBottomOf="@id/emotionContainer"
        app:layout_constraintStart_toEndOf="@id/emotionContainer"
        android:text="@string/click_to_fill"/>

    <TextView
        android:id="@+id/click_to_change_emotion_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Text12sp.Thin"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@id/emotionContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/click_to_change_emotion"/>
    
    <gamefield.yourdays.ui.customviews.buttons.UploadMonthToInstagramButton
        android:id="@+id/upload_month_to_instagram_button"
        android:layout_width="44dp"
        android:layout_height="72dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>