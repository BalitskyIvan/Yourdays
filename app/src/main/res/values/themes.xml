<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Yourdays" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>

        <!-- Set action bar invisible -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="DefaultNumberPickerTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColorPrimary">@color/white_text_color</item>
        <item name="colorControlNormal">@color/white_text_color</item>
    </style>
</resources>